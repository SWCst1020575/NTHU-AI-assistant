{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@component/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@style/*": ["src/styles/*"],
      "@util/*": ["src/utils/*"],
      "@imgs/*": ["src/imgs/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.js", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}
